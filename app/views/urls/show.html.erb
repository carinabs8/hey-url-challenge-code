<div class="row">
  <div class="col s12">
    <ul class="card-panel collection with-header">
      <li class="collection-header">
        <h4>
          Stats for <%= visit_url(@url.short_url) %>
        </h4>
      </li>
      <li class="collection-item">Created <%= @url.created_at.strftime('%b %d, %Y') %></li>
      <li class="collection-item">
        Original URL: <%= link_to @url.original_url %>
      </li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <div class="card-panel">
      <%= data_chart('total-clicks-chart', 'data-total-clicks', @daily_clicks) %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s6">
    <div class="card-panel">
      <%= data_chart('platforms-chart', 'data-platforms', @platform_clicks) %>
    </div>
  </div>

  <div class="col s6">
    <div class="card-panel">
      <%= data_chart('browsers-chart', 'data-browsers', @browsers_clicks) %>
    </div>
  </div>
</div>

<%= javascript_include_tag 'urls/metrics' %>
